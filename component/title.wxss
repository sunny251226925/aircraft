/* component/title.wxss */
.header{
  position: relative;
  display: flex;
  width: 100%;
  height: 40px;
  line-height: 40px;
  color: #fff;
  background-color: #1A67DE;
}
.header .item{
  flex: 1;
  height: 100%;
  text-align: center;
  box-sizing: border-box;
  color: #fff;
}
.header .item:first-child{
  text-align: left;
  padding-left: 15px;
  box-sizing: border-box;
}
.header .item:last-child{
  text-align: right;
  padding-right: 15px;
  box-sizing: border-box;
}
.header .pageBack{
  width: 10px;
  height: 18px;
}
