<view class='container'>
  <title title="修改真实姓名"></title>
  
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class='box'>
      <view class='row'>
        <view class='col-1'>
          <input type='text' placeholder='请输真实姓名' class='input-2' maxlength='11' name='phone'
          bindinput='setPhone'></input>
          <image src='/static/image/mobile.png' class='icon-img'></image>
        </view>
        <view class='col-last'>
          <image src='/static/image/dui.png' class='img-22'></image>
        </view>
      </view>

      <view class='row'>
        <view class='col-1'>
          <input type='text' placeholder='请输身份证号' class='input-2' maxlength='11' name='oldphone'
          bindinput='setOldMobile'></input>
          <image src='/static/image/mobile.png' class='icon-img'></image>
        </view>
        <view class='col-last'>
          <image src='/static/image/dui.png' class='img-22'></image>
        </view>
      </view>


      <view class='row'>
        <view form-type="submit" style='margin-top:70px;' class='btn-2 spacing'>确认修改</view>
      </view>

    </view>
  </form>
</view>
