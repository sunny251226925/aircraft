                  <view class='link-tag col-1'>
                      <image src='/static/image/Group-5.svg'></image>
                      <view class='title'>待失效</view>
                  </view>
                  <view class='link-tag col-1'>
                      <image src='/static/image/Group-6.svg'></image>
                      <view class='title'>待退款/失效</view>
