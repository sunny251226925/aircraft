          <view class='logo'>
              <image src='/static/image/logo.png'></image>
          </view>
          <view class='info'>
              <view class='text-1'>
                  <text>你好，***</text>
              </view>
              <view class='text-2'>
                  <text>手机号，138****0011</text>
              </view>
          </view>
          <view class='link' >
