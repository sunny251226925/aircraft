                  <view class='link-right'>
                      <image src='/static/image/jiantou-you-hui.svg'></image>
                  </view>
              </view>
          </view>


          <view style='line-height: 30px;padding-left:20px;font-size:12px;'>系统信息</view>
          <view class='link-list box-shadow-lan'>
              <view class='link'>
                  <view class='link-left'>联系客服</view>
                  <view class='link-right'>
                      <image src='/static/image/jiantou-you-hui.svg'></image>
                  </view>
              </view>
              <view class='link'>
                  <view class='link-left'>关于我们</view>
                  <view class='link-right'>
                      <image src='/static/image/jiantou-you-hui.svg'></image>
                  </view>
              </view>
          </view>
          
          
      </view>

  </view>

