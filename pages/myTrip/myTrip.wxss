/* pages/myTrip/myTrip.wxss */
.header{
  background-color: #1A67DE;
}
.header .item{
  height: 32px;
  background-color: #1A67DE;
}
.box{
  top: 31px;
  background-color: #fff;
}
.nav {
    position: relative;
    height: 50px;
    width: 100%;
    box-sizing: border-box;
    background-color: #1A67DE;
    font-size: 16px;
    white-space: nowrap;
}
.nav-item {
    width: 20%;
    height: 42px;
    line-height: 42px;
    display: inline-block;
    text-align: center;
    color: #fff;
    border-bottom: 3px solid transparent;
}
.nav-item.active{
    font-size: 16px;
    border-bottom: 3px solid #fff;
}
.tab-box{
    background: greenyellow;
    padding-top: 80rpx;
    height: 100%;
    box-sizing: border-box;
}
.tab-content{
    overflow-y: scroll;
}

.list-box.myTrip{
  position: relative;
  width: calc(100vw - 30px);
  margin: 15px 15px;
  border-radius: 5px;
  z-index: 9;
}
.list-item{
  margin-bottom: 20px;
  padding: 0 !important;
}
.list-item-col{
  display: flex;
  padding: 4px 10px;
  border:1px solid rgba(247,247,247,1);
}
.list-item .list-item-col:nth-child(1){
  line-height: 32px;
}
.list-item .list-item-col:nth-child(2) {
  line-height: 32px;
}
.list-item .list-item-col:last-child{
  border: none;
}
.list-item-col .col-left{
  text-align: left;
  flex: 2;
}
.list-item-col .col-right{
  text-align: right;
  flex: 1;
}
.icon{
  width: 32px;
  height: 32px;
  line-height: 32px;
}
.icon image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.type{
  color: #1A67DE;
}
