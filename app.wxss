.getQrCode{
  position: absolute;
  top: 3px;
  right: 3px;
  height: calc(100% - 6px);
  line-height: 31px;
  display: inline-block;
  border-radius: 20px;
  padding: 0 15px;
  color: #fff;
  background-color: #1A67DE;
  z-index: 2;
}


.container {
  display: flex;
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
  flex-direction: column;
}

.header{
  position: relative;
  display: flex;
  width: 100%;
  height: 32px;
  line-height: 32px;
  color: #fff;
}
.header .item{
  flex: 1;
  height: 100%;
  text-align: center;
  box-sizing: border-box;
}
.header .item:first-child{
  text-align: left;
  padding-left: 15px;
  box-sizing: border-box;
}
.header .item:last-child{
  text-align: right;
  padding-right: 15px;
  box-sizing: border-box;
}
.header .pageBack{
  width: 12px;
  height: 21px;
}

.box{
  position: relative;
  flex: 1;
  width: 100vw;
  padding-top: 15px;
  box-sizing: border-box;
}
.box.white{
  background-color: white;
}
.box-left{
  float: left;
  width: calc(100% - 40px);
}
.box-right{
  float: left;
  width: 40px;
}
.ellipsis{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.row{
  position: relative;
  display: flex;
  padding: 0 15px;
  width: 100%;
  margin-bottom: 15px;
  box-sizing: border-box;
}
.col-1{
  flex: 1;
}
.col-2{
  flex: 2;
}
.col-3{
  flex: 3;
}
.col-4{
  flex: 4;
}
.col-5{
  flex: 5;
}
.col-6{
  flex: 6;
}
.col-7{
  flex: 7;
}
.col-8{
  flex: 8;
}
.col-9{
  flex: 9;
}
.col-last{
  width: 35px;
  height: 37px;
  line-height: 37px;
  text-align: right;
}
[class*='col']{
  position: relative;
}

.title-1{
  text-align: left;
  line-height: 20px;
