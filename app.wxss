view,text,button{
  font-size: 14px;
  color: #474747;
  font-family: Arial, Helvetica, sans-serif;
}
page{
  display: block;  
  min-height: 100%;
}
page::after{
  position: fixed;
  top: 20px;
  left: calc(50% - 24px);
  content: "";
  font-size: 12px;
  color: #ccc;
  z-index: -1;
}
image{
  vertical-align: middle;
}
text{
  font-size: 14px;
  color: #333;
}
checkbox{
  width: 20px;
  height: 20px;
}
input{
  height: 100%;
}
textarea{
  width: 100%;
  height: 100%;
  line-height: 20px;
}
picker{
  width: 100%;
  height: 100%;
}
page .container.lan{
  background-image: linear-gradient(#005AE1, #79AFFF);
}
.system-tabbox-show{
